services:
  - type: web
    name: Artemis
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn shopify-flask-example.server:app
    envVars:
      - key: FLASK_ENV
        value: production
      - key: MONGODB_URI
        fromDatabase:
          name: shopify-db
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: SHOPIFY_API_KEY
        sync: false
      - key: SHOPIFY_API_SECRET
        sync: false

databases:
  - name: shopify-db
    databaseName: shopify
    plan: free
